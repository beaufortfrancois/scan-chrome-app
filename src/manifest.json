{
  "name": "Scan",
  "version": "0.5",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "default_locale": "en",
  "icons": {
    "32": "assets/icon_32.png",
    "128": "assets/icon_128.png",
    "256": "assets/icon_256.png"
  },
  "minimum_chrome_version": "44",
  "file_system_provider_capabilities": {
    "configurable": false,
    "multiple_mounts": false,
    "source": "device"
  },
  "permissions": ["documentScan", "fileSystemProvider", "storage", "unlimitedStorage"]
}
